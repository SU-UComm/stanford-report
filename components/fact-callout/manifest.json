{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "fact-callout",
  "version": "0.0.14",
  "namespace": "stanford-components",
  "description": "Display a fact on featured story pages",
  "displayName": "Fact callout",
  "mainFunction": "main",
  "icon": {
    "id": "fact_check",
    "color": {
      "type": "enum",
      "value": "yellow"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "displayConfiguration": {
            "title": "Fact callout configuration",
            "description": "These settings will determine what is displayed on the front-end.",
            "required": [],
            "properties": {
              "icon": {
                "title": "Fact icon",
                "enum": [
                  "pie chart",
                  "bar graph"
                ],
                "type": "string",
                "default": "pie chart"
              },
              "factText": {
                "title": "Fact text",
                "type": "string",
                "format": "multi-line"
              },
              "indicatorPosition": {
                "title": "Indicator position",
                "enum": [
                  "top",
                  "bottom"
                ],
                "type": "string",
                "default": "top"
              },
              "width": {
                "title": "Fact width",
                "description": "This option sets the width of the component, please note that this option will only work on featured story pages, not basic story pages.",
                "enum": [
                  "Wide",
                  "Narrow"
                ],
                "type": "string",
                "default": "content"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/preview.html"
          }
        }
      }
    },
    "basic": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/basicstory.html"
          }
        }
      }
    }
  }
}