{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "pullquote",
  "version": "1.0.0",
  "namespace": "stanford-components",
  "description": "Displays a quote for a story page along with details of the quote",
  "displayName": "Pullquote",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    }
  ],
  "icon": {
    "id": "format_quote",
    "color": {
      "type": "enum",
      "value": "red"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "displayConfiguration": {
            "required": [],
            "title": "Pullquote display configuration",
            "description": "Inputs user-defined settings for the pullquote component",
            "properties": {
              "asset": {
                "format": "matrix-asset-uri",
                "type": "string",
                "title": "Asset",
                "description": "Select an image asset as the quotee's image"
              },
              "quote": {
                "title": "Quote",
                "description": "The quote text",
                "type": "string",
                "format": "multi-line"
              },
              "name": {
                "title": "Name",
                "description": "The name of the quotee",
                "type": "string"
              },
              "title": {
                "title": "Title",
                "description": "The quotee's role or title",
                "type": "string"
              },
              "width": {
                "title": "Width",
                "description": "The width of the pullquote, this option will only take effect on featured story pages, not basic story pages.",
                "enum": [
                  "Narrow",
                  "Large"
                ],
                "type": "string",
                "default": "Narrow"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
