{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "media-carousel",
  "version": "2.0.0",
  "namespace": "stanford-components",
  "description": "Links to media, displayed as cards in a carousel.",
  "displayName": "Media carousel",
  "mainFunction": "main",
  "environment": [],
  "icon": {
    "id": "auto_stories",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "cards": {
            "title": "Cards",
            "description": "Enter the details for each card.",
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
              "type": "object",
              "properties": {
                "cardType": {
                  "type": "string",
                  "title": "Type",
                  "default": "Book",
                  "enum": [
                    "Book",
                    "Podcast"
                  ]
                },
                "image": {
                  "type": "string",
                  "title": "Image",
                  "format": "matrix-asset-uri"
                },
                "title": {
                  "type": "string",
                  "title": "Title"
                },
                "author": {
                  "type": "string",
                  "title": "Author"
                },
                "teaserText": {
                  "type": "string",
                  "title": "Teaser Text",
                  "format": "multi-line"
                },
                "linkUrl": {
                  "type": "string",
                  "title": "Link Url"
                }
              },
              "required": [
                "cardType",
                "image",
                "title"
              ]
            }
          }
        },
        "required": []
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "client.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
