{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "acknowledgement",
  "version": "0.0.7",
  "namespace": "stanford-components",
  "description": "A basic WYSIWYG to place an acknowledgement.",
  "displayName": "Acknowledgement",
  "mainFunction": "main",
  "icon": {
    "id": "menu_book",
    "color": {
      "type": "enum",
      "value": "red"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Acknowledgement Title",
            "default": "Article details",
            "description": "This title is read out for screen readers, to provide context and is not displayed visually.",
            "type": "string"
          },
          "content": {
            "title": "Acknowledgement",
            "type": "FormattedText"
          }
        },
        "required": ["content"]
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/basicstory.html"
          }
        }
      }
    }
  }
}
