{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "development-popular-stories-cf",
  "version": "2.1.6",
  "namespace": "stanford-components",
  "description": "Displays a list of popular stories.",
  "displayName": "Popular Stories",
  "mainFunction": "main",
  "environment": [
    {
      "name": "FB_API_TOKEN",
      "required": true
    },
    {
      "name": "FB_JSON_URL",
      "required": true
    },
    {
      "name": "MGT_API",
      "required": true
    },
    {
      "name": "CF_ANALYTICS_API",
      "required": true
    },
    {
      "name": "BASE_DOMAIN",
      "required": true
    },
    {
      "name": "BASE_PATH",
      "required": true
    }
  ],
  "icon": {
    "id": "trending_up",
    "color": {
      "type": "enum",
      "value": "purple"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "storiesCount": {
            "title": "Max number of stories",
            "description": "The maximum number of stories to display in the list.",
            "type": "number",
            "default": 5,
            "enum": [5, 10, 15, 20]
          },
          "assetExclusions": {
            "title": "Asset ID Exclusions",
            "description": "IDs of assets to exclude, separated by commas",
            "type": "string",
            "default": ""
          },
          "contentTypeExclusions": {
            "title": "Content Type Exclusions",
            "description": "IDs of content types to exclude, separated by commas. IDs 28201 (Leadership Messages), 28216 (In The News), 28210 (Announcement) are excluded from listings by default.",
            "type": "string",
            "default": ""
          },
          "sourcePath": {
            "title": "Source Path",
            "description": "Input for the Cloudflare API to source data only from a certain path.",
            "type": "string",
            "default": "/stories/%"
          },
          "APIrespCount": {
            "title": "API Response Count",
            "description": "The number of popular stories to retrieve from Cloudflare.",
            "type": "number",
            "default": 30,
            "enum": [30, 60]
          },
          "APIdateRange": {
            "title": "API Date Range",
            "description": "Input for Cloudflare to source the most popular stories over the selected duration",
            "type": "string",
            "default": "1 week",
            "enum": ["1 week", "2 weeks", "1 month"]
          },
          "publishedDateMax": {
            "title": "Published Date Maximum Range",
            "description": "Filters the results from Cloudflare to only show stories within the selected date range.",
            "type": "string",
            "default": "Past 6 months",
            "enum": ["Past 6 months", "Past 1 year", "Past 2 years"]
          }
        },
        "required": []
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "js",
              "filepath": "https://unpkg.com/react@18/umd/react.production.min.js"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "js",
              "filepath": "https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/basicstory.html"
          }
        }
      }
    }
  }
}
