{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "subscribe-to-stanford-report",
  "version": "0.0.2",
  "namespace": "stanford-components",
  "description": "Allows users to be able to subscribe to Stanford Report newsletters",
  "displayName": "Subscribe to Stanford Report",
  "mainFunction": "main",
  "icon": {
    "id": "mail",
    "color": {
      "type": "enum",
      "value": "pink"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "contentConfiguration": {
            "title": "Subscribe to Stanford Report component configuration",
            "required": [],
            "properties": {
              "title": {
                "title": "Title",
                "description": "The subscription form title",
                "type": "string"
              },
              "summary": {
                "title": "Summary",
                "description": "The summary that presents on the subscription form",
                "type": "string",
                "format": "multi-line"
              },
              "actionLink": {
                "title": "Form action",
                "description": "Subscription service endpoint",
                "type": "string"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/sidebar.html"
          }
        }
      }
    }
  }
}