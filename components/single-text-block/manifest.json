{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "single-text-block",
  "version": "0.0.1",
  "namespace": "stanford-components",
  "description": "A block of text with a heading and eyebrow.",
  "displayName": "Single Text Block",
  "mainFunction": "main",
  "icon": {
    "id": "format_align_left",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "eyebrow": {
            "title": "Eyebrow",
            "description": "This is the superheading above the title.",
            "type": "string",
            "default": "Eyebrow"
          },
          "title": {
            "title": "Title",
            "description": "The title text.",
            "type": "string",
            "default": "Lorem ipsum dolor"
          },
          "description": {
            "title": "Description",
            "description": "This is the body text.",
            "type": "FormattedText"
          }
        },
        "required": []
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/campaign.html"
          }
        }
      }
    }
  }
}