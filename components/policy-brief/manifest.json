{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "policy-brief",
  "version": "0.0.5",
  "namespace": "stanford-components",
  "description": "This component allows a content manager to create a policy brief that can be externally linked to a policy brief or case study.",
  "displayName": "Policy brief",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    }
  ],
  "icon": {
    "id": "edit_note",
    "color": {
      "type": "enum",
      "value": "yellow"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "contentConfiguration": {
            "title": "Policy brief content",
            "description": "These options will output to the frontend of the policy brief component.",
            "required": [],
            "properties": {
              "image": {
                "title": "Image",
                "format": "matrix-asset-uri",
                "type": "string"
              },
              "type": {
                "title": "Type",
                "enum": ["Policy Brief", "Case Study"],
                "default": "Policy Brief",
                "type": "string"
              },
              "title": {
                "title": "Heading",
                "description": "The heading text",
                "type": "string",
                "default": ""
              },
              "summary": {
                "title": "Summary",
                "type": "string",
                "format": "multi-line"
              },
              "linkUrl": {
                "title": "Link URL",
                "type": "string"
              },
              "linkText": {
                "title": "Link text",
                "type": "string",
                "default": "Read the full brief"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "mockedUris": {
    "matrix-asset://api-identifier/127837": {
      "type": "file",
      "path": "mocked-uris/127837.json"
    }
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/preview.html"
          }
        }
      }
    }
  }
}
