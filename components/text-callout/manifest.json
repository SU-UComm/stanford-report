{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "text-callout",
  "version": "0.0.13",
  "namespace": "stanford-components",
  "description": "This component is intended for displaying extra text content with a background colour applied",
  "displayName": "Text Callout",
  "mainFunction": "main",
  "icon": {
    "id": "campaign",
    "color": {
      "type": "enum",
      "value": "orange"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "displayConfiguration": {
            "title": "Text callout display configuration",
            "description": "These fields will make up the content displayed on the front-end.",
            "required": [],
            "properties": {
              "title": {
                "title": "Heading",
                "description": "The heading text",
                "type": "string"
              },
              "content": {
                "title": "Content",
                "description": "The text content for this component",
                "type": "FormattedText"
              }
            }
          },
          "imageConfiguration": {
            "title": "Image configuration",
            "required": [],
            "properties": {
              "image": {
                "title": "Image asset",
                "type": "string",
                "format": "matrix-asset-uri"
              },
              "caption": {
                "title": "Caption",
                "type": "string",
                "format": "multi-line"
              },
              "credit": {
                "title": "Credit",
                "type": "string"
              },
              "imagePlacement": {
                "title": "Image position",
                "enum": ["Below content", "Above content"],
                "type": "string",
                "default": "Below content"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "mockedUris": {
    "matrix-asset://api-identifier/99100": {
      "type": "file",
      "path": "mocked-uris/99100.json"
    },
    "matrix-asset://api-identifier/125800": {
      "type": "file",
      "path": "mocked-uris/125800.json"
    },
    "matrix-asset://api-identifier/125801": {
      "type": "file",
      "path": "mocked-uris/125801.json"
    }
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/preview.html"
          }
        }
      }
    }
  }
}
