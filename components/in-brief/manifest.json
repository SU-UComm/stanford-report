{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "development-in-brief",
  "version": "0.0.1",
  "namespace": "stanford-components",
  "description": "Summary of main points in a bulleted list.",
  "displayName": "In Brief",
  "mainFunction": "main",
  "icon": {
    "id": "summarize",
    "color": {
      "type": "enum",
      "value": "pink"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "points": {
            "title": "Summary Points",
            "description": "These points will be displayed as a bullet list.",
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
              "type": "string",
              "title": "Summary Point",
              "format": "multi-line"
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/basicstory.html"
          }
        }
      }
    }
  }
}