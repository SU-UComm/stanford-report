{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "header-component",
  "version": "0.0.20",
  "namespace": "stanford-components",
  "description": "Stanford university Header component.",
  "displayName": "Header",
  "mainFunction": "main",
  "environment": [
    {
      "name": "CONTENT_API",
      "required": true
    },
    {
      "name": "CONTENT_API_KEY",
      "required": true
    },
    {
      "name": "FB_JSON_URL",
      "required": true
    }
  ],
  "icon": {
    "id": "explore",
    "color": {
      "type": "enum",
      "value": "orange"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "dataUrl": {
            "type": "string"
          }
        },
        "required": ["dataUrl"]
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/outerlayout.html"
          }
        }
      }
    }
  }
}
