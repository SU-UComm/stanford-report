{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "campaign-hero",
  "version": "0.0.1",
  "namespace": "stanford-components",
  "description": "Stanford university Hero for use on Campaign pages.",
  "displayName": "Campaign Hero",
  "mainFunction": "main",
  "icon": {
    "id": "foundation",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "bkgImage": {
            "title": "Background image",
            "type": "string"
          },
          "title": {
            "title": "Heading",
            "description": "The heading text",
            "type": "string",
            "default": "Lorem ipsum dolor"
          },
          "intro": {
            "title": "Intro",
            "description": "Introduction text that displays below the headline.",
            "type": "string",
            "default": "Lorem ipsum dolor"
          },
          "quote": {
            "title": "Quote Text",
            "description": "The quoted text. Do not include quotation marks, they will display automatically",
            "type": "string",
            "format": "multi-line"
          },
          "name": {
            "title": "Name",
            "description": "The name of the quotee",
            "type": "string"
          },
          "extra": {
            "title": "Extra",
            "description": "Extra text for attribution, if needed. Could be a job title or descriptive information.",
            "type": "string"
          },
          "quoteLink": {
            "title": "Quote Link",
            "description": "Link for quote name attribution, if needed.",
            "type": "string"
          },
          "videoUrl": {
            "title": "YouTube Video URL",
            "description": "A video that will play in a modal.",
            "type": "string"
          },
          "bkgVideo": {
            "title": "Background Video",
            "description": "Background looping video URL. We're using Vimeo for these.",
            "type": "string"
          }
        },
        "required": []
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "js",
              "filepath": "https://unpkg.com/react@18/umd/react.production.min.js"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "js",
              "filepath": "https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/preview.html"
          }
        }
      }
    }
  }
}
