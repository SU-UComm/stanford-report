{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "campaign-hero",
  "version": "0.0.1",
  "namespace": "stanford-components",
  "description": "Stanford university Hero for use on Campaign pages.",
  "displayName": "Campaign Hero",
  "mainFunction": "main",
  "icon": {
    "id": "foundation",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "bkgConfig": {
            "title": "Background",
            "description": "Would you like to use an image or looping video as the background?",
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "title": "Background Type",
                "default": "Image",
                "enum": ["Image", "Video"],
                "type": "string"
              }
            },
            "allOf": [
              {
                "if": {
                  "required": [],
                  "properties": {
                    "type": {
                      "const": "Image"
                    }
                  }
                },
                "then": {
                  "required": ["bkgImage"],
                  "properties": {
                    "bkgImage": {
                      "title": "Background image",
                      "description": "Choose a background image.",
                      "type": "string",
                      "format": "matrix-asset-uri"
                    }
                  }
                }
              },
              {
                "if": {
                  "required": [],
                  "properties": {
                    "type": {
                      "const": "Video"
                    }
                  }
                },
                "then": {
                  "required": ["bkgVideo"],
                  "properties": {
                    "bkgVideo": {
                      "title": "Background video",
                      "description": "The looping video URL â€“ we're using Vimeo for these.",
                      "type": "string"
                    }
                  }
                }
              }
            ]
          },
          "textConfig": {
            "title": "Title & Introduction",
            "type": "object",
            "required": ["title", "intro"],
            "properties": {
              "title": {
                "title": "Heading",
                "description": "The heading text",
                "type": "string",
                "default": "Lorem ipsum dolor"
              },
              "intro": {
                "title": "Intro",
                "description": "Introduction text that displays below the headline.",
                "type": "string",
                "default": "Lorem ipsum dolor"
              }
            }
          },
          "quoteConfig": {
            "title": "Quote",
            "type": "object",
            "required": ["include"],
            "properties": {
              "include": {
                "title": "Would you like to include a quote?",
                "default": true,
                "type": "boolean"
              }
            },
            "allOf": [
              {
                "if": {
                  "required": [],
                  "properties": {
                    "include": {
                      "const": true
                    }
                  }
                },
                "then": {
                  "required": ["quote", "name"],
                  "properties": {
                    "quote": {
                      "title": "Quote text",
                      "description": "The quoted text. Do not include quotation marks, they will display automatically",
                      "type": "string",
                      "format": "multi-line"
                    },
                    "name": {
                      "title": "Name",
                      "description": "The name of the quotee.",
                      "type": "string"
                    },
                    "extra": {
                      "title": "Extra",
                      "description": "Extra text for attribution, if needed. Could be a job title or descriptive information.",
                      "type": "string"
                    },
                    "quoteInternalUrl": {
                      "title": "Quote internal link (Matrix asset link)",
                      "type": "string",
                      "description": "Link for quote name attribution, if needed. Select a Matrix page/asset to link to. If you prefer to paste the full URL manually, use the 'Quote manual/external link' field below instead.",
                      "format": "matrix-asset-uri"
                    },
                    "quoteManualUrl": {
                      "title": "Quote manual/external link",
                      "description": "Link for quote name attribution, if needed. Enter the full URL, including https://.",
                      "type": "string"
                    },
                    "image": {
                      "title": "Image",
                      "description": "Typically an image of the person quoted. It will be displayed in as a circular thumbnail next to the quote. A square image would work best.",
                      "type": "string",
                      "format": "matrix-asset-uri"
                    },
                    "youtubeId": {
                      "title": "YouTube Video ID",
                      "description": "The ID of the YouTube video that will play in a modal.",
                      "type": "string"
                    }
                  }
                }
              }
            ]
          }
        },
        "required": ["bkgConfig", "textConfig"]
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "mockedUris": {
    "matrix-asset://api-identifier/99100": {
      "type": "file",
      "path": "mocked-uris/99100.json"
    },
    "matrix-asset://api-identifier/28192": {
      "type": "file",
      "path": "mocked-uris/28192.json"
    }
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/campaign.html"
          }
        }
      }
    }
  }
}
