{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "featured-content-vv",
  "version": "0.0.1",
  "namespace": "stanford-components",
  "description": "",
  "displayName": "Featured content with vertical video",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    },
    {
      "name": "FB_JSON_URL",
      "required": true
    },
    {
      "name": "BASE_DOMAIN",
      "required": true
    }
  ],
  "icon": {
    "id": "auto_awesome_mosaic",
    "color": {
      "type": "enum",
      "value": "blue"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "headingConfiguration": {
            "title": "Section Heading Configuration",
            "description": "The heading for the section, appearing before the grid of cards. If the title is empty, the heading and call to action link will be hidden.",
            "required": [],
            "properties": {
              "includeSectionHeading": {
                "title": "Include Section Heading",
                "type": "boolean",
                "default": false
              }
            },
            "allOf": [
              {
                "if": {
                  "required": [],
                  "properties": {
                    "includeSectionHeading": {
                      "const": true
                    }
                  }
                },
                "then": {
                  "required": [],
                  "properties": {
                    "title": {
                      "title": "Heading",
                      "type": "string"
                    },
                    "ctaUrl": {
                      "title": "Matrix Asset Link",
                      "type": "string",
                      "description": "Select an asset to link to. If this field is filled out, it will be used instead of the manual link",
                      "format": "matrix-asset-uri"
                    },
                    "ctaManualUrl": {
                      "title": "Manual Link",
                      "type": "string",
                      "description": "Enter the full URL, including https://"
                    },
                    "ctaText": {
                      "title": "Link text",
                      "type": "string",
                      "default": "View all"
                    },
                    "ctaNewWindow": {
                      "title": "Open link in a new window",
                      "type": "boolean",
                      "default": false
                    }
                  }
                }
              }
            ]
          },
          "contentConfiguration": {
            "title": "Grid Content",
            "description": "The cards to display in the grid area of the component. The featured card appears larger than the supplementary cards. When manually selecting cards, at least three must be selected for the grid to display.",
            "type": "object",
            "required": [],
            "properties": {
              "featuredStory": {
                "title": "Featured Item",
                "description": "The large featured item.",
                "type": "string",
                "format": "matrix-asset-uri"
              },
              "featuredDescriptionOverride": {
                "title": "Featured Item Description",
                "description": "Use this field if you would like to override the Featured Item's description that comes from the story asset.",
                "type": "string",
                "format": "multi-line"
              },
              "videoImage": {
                "title": "Video preview image",
                "description": "Select an image to use as the video preview. The aspect ratio of the image displayed will be the same as the YouTube shorts which is 9x16.",
                "type": "string",
                "format": "matrix-asset-uri"
              },
              "youtubeId": {
                "title": "YouTube video ID",
                "description": "Enter the video ID from YouTube.",
                "type": "string"
              },
              "relatedStory": {
                "title": "Related Story",
                "description": "Choose a story that is realted to the video above.",
                "type": "string",
                "format": "matrix-asset-uri"
              },
              "relatedDescriptionOverride": {
                "title": "Related Story Description",
                "description": "This field will override the related story description that comes from the selected story asset.",
                "type": "string",
                "format": "multi-line"
              }
            }
          },
          "displayConfiguration": {
            "title": "Grid Display Configuration",
            "required": [],
            "properties": {
              "alignment": {
                "title": "Featured Card: Alignment",
                "description": "The position of the featured card on larger screens.",
                "default": "left",
                "enum": ["left", "right"]
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "global.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "mockedUris": {
    "matrix-asset://api-identifier/89422": {
      "type": "file",
      "path": "mocked-uris/89422.json"
    },
    "matrix-asset://api-identifier/99100": {
      "type": "file",
      "path": "mocked-uris/99100.json"
    }
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "select.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/section.html"
          }
        }
      }
    },
    "noHeading": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "noHeading.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/section.html"
          }
        }
      }
    }
  }
}
