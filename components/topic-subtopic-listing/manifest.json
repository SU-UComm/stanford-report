{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "topic-subtopic-listing",
  "version": "2.0.7",
  "namespace": "stanford-components",
  "description": "Listing of stories as cards with pagination.",
  "displayName": "Topic / subtopic listing",
  "mainFunction": "main",
  "environment": [
    {
      "name": "FB_JSON_URL",
      "required": true
    }
  ],
  "icon": {
    "id": "clear_all",
    "color": {
      "type": "enum",
      "value": "yellow"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "displayConfiguration": {
            "required": [],
            "properties": {
              "searchQuery": {
                "title": "Search query",
                "type": "string"
              },
              "displayStyle": {
                "title": "Topic list display",
                "type": "string",
                "default": "Default",
                "enum": [
                  "Default",
                  "News Archive",
                  "Press Center",
                  "Announcements",
                  "In the News",
                  "Leadership Messages"
                ]
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": []
      }
    }
  ],
  "staticFiles": {
    "locationRoot": ""
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    },
    "presscenter": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "presscenter.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    },
    "announcements": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "announcements.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    },
    "inthenews": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "inthenews.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    },
    "leadershipmessages": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "leadershipmessages.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    }
  }
}