{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "info-page-header",
  "version": "0.0.1",
  "namespace": "stanford-components",
  "description": "Just the header of an Info Page.",
  "displayName": "Info Page Header",
  "mainFunction": "main",
  "icon": {
    "id": "foundation",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Heading",
            "description": "The heading text",
            "type": "string",
            "default": "Lorem ipsum dolor"
          },
          "alignment": {
            "title": "Heading alignment",
            "description": "Left align or center the heading.",
            "enum": ["left", "center"],
            "type": "string",
            "default": "left"
          }
        },
        "required": []
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/preview.html"
          }
        }
      }
    }
  }
}
