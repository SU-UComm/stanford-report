{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "multicolumn-listing",
  "version": "0.0.23",
  "namespace": "stanford-components",
  "description": "",
  "displayName": "Multicolumn Listing",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    },
    {
      "name": "FB_JSON_URL",
      "required": true
    }
  ],
  "icon": {
    "id": "auto_awesome_mosaic",
    "color": {
      "type": "enum",
      "value": "blue"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "headingConfiguration": {
            "title": "Section Heading Configuration",
            "description": "The heading for the section, appearing before the grid of cards. If the title is empty, the heading and call to action link will be hidden.",
            "type": "object",
            "required": [],
            "properties": {
              "title": {
                "title": "Heading",
                "type": "string"
              },
              "ctaUrl": {
                "title": "Matrix Asset Link",
                "type": "string",
                "description": "Select an asset to link to. If this field is filled out, it will be used instead of the manual link",
                "format": "matrix-asset-uri"
              },
              "ctaManualUrl": {
                "title": "Manual Link",
                "type": "string",
                "description": "Enter the full URL, including https://"
              },
              "ctaText": {
                "title": "Link text",
                "type": "string",
                "default": "View all"
              },
              "ctaNewWindow": {
                "title": "Open link in a new window",
                "type": "boolean",
                "default": false
              }
            }
          },
          "contentConfiguration": {
            "title": "Grid Content",
            "description": "The cards to display in the grid area of the component. When manually selecting cards, at least two must be selected for the grid to display.",
            "type": "object",
            "required": ["source"],
            "properties": {
              "source": {
                "title": "Content source",
                "default": "Search",
                "enum": ["Search", "Select"],
                "type": "string"
              }
            },
            "allOf": [
              {
                "if": {
                  "required": [],
                  "properties": {
                    "source": {
                      "const": "Search"
                    }
                  }
                },
                "then": {
                  "required": ["searchQuery"],
                  "properties": {
                    "searchQuery": {
                      "type": "string",
                      "title": "The Funnelback search query",
                      "description": "This query will fill the component with results from the query formatted as cards.",
                      "default": "?"
                    },
                    "searchMaxCards": {
                      "title": "Number of cards",
                      "description": "The maximum number of cards to display.",
                      "default": 3,
                      "enum": [2, 3],
                      "type": "number"
                    }
                  }
                }
              },
              {
                "if": {
                  "required": [],
                  "properties": {
                    "source": {
                      "const": "Select"
                    }
                  }
                },
                "then": {
                  "required": [],
                  "properties": {
                    "cards": {
                      "title": "Cards",
                      "description": "Select the assets that will be used for cards.",
                      "type": "array",
                      "minItems": 2,
                      "maxItems": 3,
                      "items": {
                        "type": "object",
                        "properties": {
                          "cardAsset": {
                            "type": "string",
                            "format": "matrix-asset-uri",
                            "title": "Card Asset"
                          }
                        },
                        "required": ["cardAsset"]
                      }
                    }
                  }
                }
              }
            ]
          },
          "displayConfiguration": {
            "title": "Grid Display Configuration",
            "type": "object",
            "required": [],
            "properties": {
              "displayThumbnails": {
                "title": "Display Thumbnails",
                "default": true,
                "type": "boolean"
              },
              "displayDescriptions": {
                "title": "Display Descriptions",
                "default": true,
                "type": "boolean"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
