{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "image-quote",
  "version": "0.0.14",
  "namespace": "stanford-components",
  "description": "An image with an associated quote.",
  "displayName": "Image quote",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    }
  ],
  "icon": {
    "id": "format_quote",
    "color": {
      "type": "enum",
      "value": "teal"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "displayConfiguration": {
            "title": "",
            "description": "",
            "required": [],
            "properties": {
              "image": {
                "title": "Image Asset",
                "description": "A Matrix image asset",
                "type": "string",
                "format": "matrix-asset-uri"
              },
              "imageCaption": {
                "title": "Image caption",
                "description": "A caption for the image",
                "type": "string"
              },
              "imageCredit": {
                "title": "Image credit",
                "description": "A credit for the image",
                "type": "string"
              },
              "quote": {
                "title": "Quote",
                "type": "string",
                "format": "multi-line"
              },
              "name": {
                "title": "Name",
                "description": "The name of the quotee",
                "type": "string"
              },
              "title": {
                "title": "Title",
                "description": "The title/role of the quotee",
                "type": "string"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "mockedUris": {
    "matrix-asset://api-identifier/127837": {
      "type": "file",
      "path": "mocked-uris/127837.json"
    },
    "matrix-asset://api-identifier/99100": {
      "type": "file",
      "path": "mocked-uris/99100.json"
    },
    "matrix-asset://api-identifier/128612": {
      "type": "file",
      "path": "mocked-uris/128612.json"
    }
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "preview.data.json"
          },
          "wrapper": {
            "path": "../../packages/__globalPreview/preview.html"
          }
        }
      }
    }
  }
}
