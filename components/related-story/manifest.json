{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "related-story",
  "version": "0.0.10",
  "namespace": "stanford-components",
  "description": "Displays a related story on a featured story",
  "displayName": "Related story",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    },
    {
      "name": "FB_JSON_URL",
      "required": true
    }
  ],
  "icon": {
    "id": "ads_click",
    "color": {
      "type": "enum",
      "value": "pink"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "contentConfiguration": {
            "title": "Related story content",
            "description": "Select an asset ID to be featured as a related story.",
            "type": "object",
            "required": ["story"],
            "properties": {
              "story": {
                "title": "Related story",
                "type": "string",
                "format": "matrix-asset-uri"
              },
              "descriptionOverride": {
                "title": "Description",
                "description": "This field will override the related story description that comes from the selected story asset.",
                "type": "string",
                "format": "multi-line"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
  "mockedUris": {
    "matrix-asset://api-identifier/28207": {
      "type": "file",
      "path": "mocked-uris/28207.json"
    },
    "matrix-asset://api-identifier/125002": {
      "type": "file",
      "path": "mocked-uris/125002.json"
    },
