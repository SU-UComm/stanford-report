{
  "$schema": "http://localhost:3000/schemas/v1.json#",
  "name": "in-the-news",
  "version": "0.0.6",
  "namespace": "stanford-components",
  "description": "This component contains one featured quote and two supplementary teasers.",
  "displayName": "In the news",
  "mainFunction": "main",
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": true
    }
  ],
  "icon": {
    "id": "foundation",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "functions": [
    {
      "name": "main",
      "entry": "./dist/server.cjs",
      "input": {
        "type": "object",
        "required": [],
        "properties": {
          "headingConfiguration": {
            "required": [],
            "properties": {
              "title": {
                "title": "Heading",
                "description": "The heading text",
                "type": "string",
                "default": "In the news"
              },
              "ctaText": {
                "title": "Link text",
                "type": "string",
                "default": "View all"
              },
              "ctaUrl": {
                "title": "Link URL",
                "type": "string",
                "format": "matrix-asset-uri"
              }
            }
          },
          "featuredContent": {
            "title": "Featured Content",
            "description": "The main featured item in the component",
            "required": [],
            "properties": {
              "featuredTeaser": {
                  "title": "Featured teaser",
                  "format": "matrix-asset-uri",
                  "type": "string"
              },
              "featuredQuote": {
                "title": "Featured Quote",
                "type": "string"
              }
            }
          },
          "supplementaryTeaserOne": {
            "required": [],
            "properties": {
              "teaserOne": {
                "title": "Teaser One",
                "format": "matrix-asset-uri",
                "type": "string"
              }
            }
          },
          "supplementaryTeaserTwo": {
            "required": [],
            "properties": {
              "teaserOne": {
                "title": "Teaser Two",
                "format": "matrix-asset-uri",
                "type": "string"
              }
            }
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": [
          {
            "location": "header",
            "file": {
              "type": "css",
              "filepath": "main.css"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "js",
              "filepath": "https://unpkg.com/react@18/umd/react.production.min.js"
            }
          },
          {
            "location": "header",
            "file": {
              "type": "js",
              "filepath": "https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"
            }
          },
          {
            "location": "footer",
            "file": {
              "type": "js",
              "filepath": "client.js"
            }
          }
        ]
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./dist"
  },
